<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%- include('../includes/link.ejs') %>
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/user/index.css"/>
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/sidebar.css"/>
    <link rel="stylesheet" href="/css/user/add-user.css"/>
    <title>Add User</title>
</head>
<body>
<%- include('../includes/header.ejs') %>
<div style="display: flex; flex-direction: row;padding-top: 10px;">
    <%- include('../includes/sideMenu.ejs') %>

    <% if(message.success) { %>
        <%- include('../includes/alerts/success.ejs') %>
    <% } else if(message.error) {%>
        <%- include('../includes/alerts/danger.ejs') %>
    <% } %>
</div>
<main class="primaryContainer" >

    <h2 class="headTitle">Add Location</h2>

    <!--        <form action="/users/add" method="post" class="formContainer">-->
    <form action="<%= location ? "/locations/update" : "/locations/add" %>" method="post" class="formContainer">

        <% if(location){ %>
        <input type="text" id="id" name="id" class="textInput" hidden="hidden" value="<%=location._id%>"><br>

        <input type="text" id="page" name="page" class="textInput" hidden="hidden" value="<%=page%>"><br>
        <% } %>

        <!-- Title -->
        <label for="title" class="label">Title:</label>
        <input type="text" id="title" name="title" class="textInput"  value="<%= location ? location.title : '' %>" required><br>

        <!-- Latitude -->
        <label for="latitude" class="label">Latitude:</label>
        <input type="number" id="latitude" name="latitude" class="textInput" value="<%= location ? location.latitude : '' %>" required><br>

        <!-- Longitude -->
        <label for="longitude" class="label">Longitude:</label>
        <input type="number" id="longitude" name="longitude" class="textInput" value="<%= location ? location.longitude : '' %>" required><br>

        <!-- Active Dropdown -->
        <label for="active" class="label">Active:</label>
        <select id="active" name="active" class="dropdown" required>
            <option value="1" <%= location && location.active === 1 ? 'selected' : '' %>>Yes</option>
            <option value="0" <%= location && location.active === 0 ? 'selected' : '' %>>No</option>
            <!-- Add more options as needed -->
        </select><br>

        <!-- Submit Button -->
        <div style="display: flex; flex-direction: row;">
            <input type="submit" value="Submit" class="submitButton">
            <% if(location) { %>
            <a type="submit" class="submitButton" href="/locations/?page=<%=page%>" style="background-color: red;text-decoration: none">X</a>
            <% } %>
        </div>
    </form>


</main>
<%- include('../includes/footer.ejs')%>
<%- include('../includes/scriptBottom.ejs') %>
</body>
</html>
