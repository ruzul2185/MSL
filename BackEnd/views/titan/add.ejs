<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%- include('../includes/link.ejs') %>
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/user/index.css"/>
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/sidebar.css"/>
    <link rel="stylesheet" href="/css/user/add-user.css"/>
    <title>Add Titan</title>
</head>
<body>
<%- include('../includes/header.ejs') %>
<div style="display: flex; flex-direction: row;padding-top: 10px;">
    <%- include('../includes/sideMenu.ejs') %>

    <% if(message.success) { %>
        <%- include('../includes/alerts/success.ejs') %>
    <% } else if(message.error) {%>
        <%- include('../includes/alerts/danger.ejs') %>
    <% } %>
</div>
<main class="primaryContainer" >

    <h2 class="headTitle">Add Titan</h2>

    <!--        <form action="/users/add" method="post" class="formContainer">-->
    <form action="<%= titan ? "/titans/update" : "/titans/add" %>" method="post" class="formContainer">

        <% if(titan){ %>
        <input type="text" id="id" name="id" class="textInput" hidden="hidden" value="<%=titan._id%>"><br>
        <% } %>

        <!-- Element Dropdown -->
        <label for="Element" class="label">Element:</label>
        <select id="Element" name="Element" class="dropdown" required>
            <option value="Fire" <%= titan && titan.Element === 'Fire' ? 'selected' : '' %>>Fire</option>
            <option value="Water" <%= titan && titan.Element === 'Water' ? 'selected' : '' %>>Water</option>
            <option value="Wood" <%= titan && titan.Element === 'Wood' ? 'selected' : '' %>>Wood</option>
            <option value="Light" <%= titan && titan.Element === 'Light' ? 'selected' : '' %>>Light</option>
            <option value="Dark" <%= titan && titan.Element === 'Dark' ? 'selected' : '' %>>Dark</option>
            <!-- Add more role options as needed -->
        </select><br>

        <!-- URL -->
        <label for="URL" class="label">URL:</label>
        <input type="text" id="URL" name="URL" class="textInput"  value="<%= titan ? titan.URL : '' %>" required><br>

        <!-- PassiveSkill -->
        <label for="PassiveSkill" class="label">Passive Skill:</label>
        <select id="PassiveSkill" name="PassiveSkill" class="dropdown" required>
            <% passiveSkills.forEach(item => { %>
                <option value="<%= item.Name %>" <%= titan && titan.PassiveSkill === item.Name ? 'selected' : '' %>><%= item.Name %></option>
            <% }) %>
            <!-- Add more role options as needed -->
        </select><br>

        <!-- PassiveSkillFigure -->
        <label for="PassiveSkillFigure" class="label">Passive Skill Figure:</label>
        <input type="text" id="PassiveSkillFigure" name="PassiveSkillFigure" class="textInput"  value="<%= titan ? titan.PassiveSkillFigure : '' %>" required><br>

        <!-- ActiveSkill -->
        <label for="ActiveSkill" class="label">Active Skill:</label>
        <select id="ActiveSkill" name="ActiveSkill" class="dropdown" required>
            <% passiveSkills.forEach(item => { %>
                <option value="<%= item.Name %>" <%= titan && titan.ActiveSkill === item.Name ? 'selected' : '' %>><%= item.Name %></option>
            <% }) %>
            <!-- Add more role options as needed -->
        </select><br>

        <!-- ActiveSkillFigure -->
        <label for="ActiveSkillFigure" class="label">Active Skill Figure:</label>
        <input type="text" id="ActiveSkillFigure" name="ActiveSkillFigure" class="textInput"  value="<%= titan ? titan.ActiveSkillFigure : '' %>" required><br>

        <!-- Submit Button -->
        <div style="display: flex; flex-direction: row;">
            <input type="submit" value="Submit" class="submitButton">
            <% if(titan) { %>
                <a type="submit" class="submitButton" href="/titans" style="background-color: red;text-decoration: none">X</a>
            <% } %>
        </div>
    </form>


</main>
<%- include('../includes/footer.ejs')%>
<%- include('../includes/scriptBottom.ejs') %>
</body>
</html>
